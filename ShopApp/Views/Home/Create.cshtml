@model ShopApp.Models.ProductVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form enctype="multipart/form-data" asp-action="Create" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" min="0" type="number" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Small" class="control-label"></label>

				<input asp-for="Small" class="form-control">
				<span asp-validation-for="Small" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Medium" class="control-label"></label>

				<input asp-for="Medium" class="form-control">
				<span asp-validation-for="Medium" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Large" class="control-label"></label>

				<input asp-for="Large" class="form-control">
				<span asp-validation-for="Large" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Extra" class="control-label"></label>

				<input asp-for="Extra" class="form-control">
				<span asp-validation-for="Extra" class="text-danger"></span>
			</div>
			

			<div class="form-group">
				<label asp-for="Total" class="control-label" ></label>
				@Html.DisplayFor(x=>x.Total)
				@*<input asp-for="Total" type="number" value="" class="form-control" disabled="disabled" />*@
				<span asp-validation-for="Total" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Photo" class="control-label"></label>
				<input asp-for="Photo" class="form-control" />
				<span asp-validation-for="Photo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

